@using EntityLayer
@model List<Hastane>

<!DOCTYPE html>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

<div class="container">
    <div class="my-5">
        <h2>Kayıtlı Hastanelerimiz</h2>
    </div>
    <div class="row my-5">
        
        
        <div class="col-8">
            
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Hastane Adı</th>
                        <th>Bulunduğu Şehir</th>
                    </tr>
                </thead>

                @foreach (var item in Model)

                {
                    <tbody>
                        <tr>
                            <td>@item.HastaneId</td>
                            <td>@item.HastaneAd</td>
                            <td>@item.HastaneSehir</td>
                            <td class="d-flex flex-nowrap justify-content-around" >
                                <a href="/Hastane/Delete" style="text-decoration:none">
                                    <button class="btn btn-danger">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" class="bi bi-x" viewBox="0 0 16 16">
                                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                        </svg>
                                    </button>
                                </a>
                                <a href="/Hastane/Update" style="text-decoration:none">
                                    <button class="btn btn-warning">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    </tbody>

                }



            </table>


        </div>
        <div class="col-4">
            <img src="https://magnethastanesi.com.tr/wp-content/uploads/2022/01/hastane-ankara.jpg" style="max-width: 100%"></img>
        </div>
    </div>
    

</div>